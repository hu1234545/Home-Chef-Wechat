.wrapper { padding: 24rpx; }
.hero { background: #fffbeb; border-radius: 16rpx; padding: 24rpx; }
.hero-title { color: #b45309; font-size: 32rpx; font-weight: 600; }

.search { margin-top: 24rpx; }
.search-input { background: #fff; border: 2rpx solid #fcd34d; border-radius: 999rpx; padding: 16rpx 24rpx; }

.tabs { margin-top: 24rpx; }
.tabs-row { display: flex; gap: 16rpx; }
.tab { padding: 12rpx 24rpx; border-radius: 999rpx; background: #fff; border: 2rpx solid #fde68a; color: #92400e; }
.tab-active { background: #f59e0b; border-color: #f59e0b; color: #fff; }

.list { margin-top: 24rpx; display: flex; flex-wrap: wrap; gap: 24rpx; }
.item { width: calc(50% - 12rpx); overflow: hidden; }
.thumb { width: 100%; height: 220rpx; background: #fff7ed; }
.meta { padding: 16rpx; }
.name { font-size: 28rpx; font-weight: 600; color: #111827; }
.tags { display: flex; gap: 8rpx; margin-top: 8rpx; }
.tag { font-size: 22rpx; color: #92400e; background: #fffbeb; padding: 6rpx 12rpx; border-radius: 999rpx; border: 2rpx solid #fde68a; }
