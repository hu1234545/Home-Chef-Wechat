.wrapper { padding: 0 24rpx 24rpx; }
.cover { width: 100%; height: 360rpx; background: #fff7ed; }
.content { margin-top: -40rpx; padding: 24rpx; }
.name { font-size: 36rpx; font-weight: 700; color: #111827; }
.tags { display: flex; gap: 10rpx; margin-top: 12rpx; }
.tag { font-size: 22rpx; color: #92400e; background: #fffbeb; padding: 6rpx 12rpx; border-radius: 999rpx; border: 2rpx solid #fde68a; }
.section { margin-top: 24rpx; }
.section-title { font-size: 28rpx; color: #b45309; font-weight: 600; }
.ing-list { display: flex; flex-wrap: wrap; gap: 12rpx; margin-top: 12rpx; }
.ing { background: #fff; border: 2rpx solid #fde68a; color: #92400e; padding: 8rpx 12rpx; border-radius: 12rpx; }
.steps { margin-top: 12rpx; display: flex; flex-direction: column; gap: 12rpx; }
.step { line-height: 1.6; color: #374151; }
